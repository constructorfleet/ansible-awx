{% raw %}
env:
  FOREMAN_INI_PATH: '{{ tower.filename }}'
file:
  template: |
    [foreman]
    url = {{ url }}
    user = {{ username }}
    password = {{ password }}
    ssl_verify = False
    [ansible]
    group_patterns = ["{app}"]
    group_prefix =
    want_facts = True
    want_hostcollections = True
    rich_params = True
    want_ansible_ssh_host = True
    [cache]
    path = .
    max_age = 60
    scan_new_hosts = True
{% endraw %}
